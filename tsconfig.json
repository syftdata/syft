{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "declarationMap": true,
      "noImplicitAny": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "target": "ES2015",
      "sourceMap": false,
      "lib": [
        "ES2015"
      ]
    },
    "exclude": [
      "**/node_modules/*",
      "build",
      "lib",
      "dist",
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
   }